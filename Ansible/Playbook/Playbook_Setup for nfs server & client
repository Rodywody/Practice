---
- name: setup for nfs server
  hosts: localhost
  gather_facts: no

  tasks:
    - name: install nfs
      yum: 
        name: nfs-utils
        state: latest
      
    - name: make nfs_shared directory
      file:
        path: /nfs
        state: directory
        mode: 0777

    - name: configure /etc/exports  #해당 설정파일에 해당 ip 사용자가 접근,읽기,쓰기 가능하게 하고 동기화(sync)
      become: yes
      lineinfile:
        path: /etc/exports
        line: /nfs 192.168.111.0/24(rw,sync,all_squash) 

    - name: nfs service restart
      become: yes
      service: 
        name: nfs-utils
        state: restarted

    - name: nfs server restart
      become: yes
      service: 
        name: nfs-server
        state: restarted
         
    - name: rpcbind restart
      become: yes
      service: 
        name: rpcbind
        state: restarted

    - name: firewall
      firewalld:
        permanent: yes
        immediate: yes
        service: "{{ item }}"
        state: enabled
      with_items:
       - nfs
       - mountd
       - rpc-bind

- name: setup for nfs clients
  hosts: nginx
  gather_facts: no

  tasks: 
    - name: install nfs
      yum: 
        name: nfs-utils
        state: latest

    - name: start nfs
      service:
        name: nfs-utils
        state: started
  
    - name: make nfs_client directory
      file: 
        path: /nfsclient
        state: directory

    - name: mount point directory as client
      become: yes
      mount:
        path: /nfsclient
        src: 192.168.111.100:/nfs
        fstype: nfs
        state: mounted

    - name: auto mount
      become: yes
      lineinfile:
        path: /etc/fstab
        line: 192.168.111.100:/nfs /nfsclient nfs defaults 0 0 

         
 
      
